<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="irama.irama">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Controllers.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home"></activity>
        <activity
            android:name=".Activity.new_order"
            android:label="new order">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search" />
        </activity>
        <activity
            android:name=".Activity.login"
            android:label="irama"></activity>
        <activity
            android:name=".Activity.splash_screen"
            android:label="irama"></activity>
        <activity
            android:name=".Activity.detail_order"
            android:label="irama"></activity>
        <activity
            android:name=".Activity.new_client"
            android:label="irama"></activity>
        <activity
            android:name=".Activity.home_activity"
            android:label="irama">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollingActivityClient"
            android:label="@string/title_activity_scrolling_client"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>