<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <at.markushi.ui.CircleButton
                android:id="@+id/assistance_order"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_assignment"
                app:cb_color="#eef94521"
                android:elevation="8dp"
                app:cb_pressedRingWidth="4dip"/>
            <at.markushi.ui.CircleButton
                android:id="@+id/assistance_client"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="8dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_person_add"
                app:cb_color="#42d0f4"
                app:cb_pressedRingWidth="4dip"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="order"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="60dp"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="client"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="syncs"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <at.markushi.ui.CircleButton
                android:id="@+id/assistance_sync_orders"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sycn_white"
                app:cb_pressedRingWidth="4dip"
                android:elevation="8dp"
                app:cb_color="#20cc48"/>
            <at.markushi.ui.CircleButton
                android:id="@+id/assistance_sync_clients"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_person_white"
                app:cb_pressedRingWidth="4dip"
                android:elevation="8dp"
                app:cb_color="#8a1eb1"/>
            <at.markushi.ui.CircleButton
                android:id="@+id/assistance_get_clients"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_people"
                app:cb_pressedRingWidth="4dip"
                android:elevation="8dp"
                app:cb_color="#d4de1f"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="sync orders"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:text="sync clients"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:text="get clients"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>